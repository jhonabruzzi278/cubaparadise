---
import type { GetStaticPaths } from "astro";
import { getCollection, type CollectionEntry } from 'astro:content';
import DefaultLayout from "../../../layouts/DefaultLayout.astro";
import { getWhatsAppUrl } from "../../../utils/whatsapp.ts";
import IconWhatsapp from "../../../components/IconWhatsapp.astro";

export const getStaticPaths = (async () => {
  const excursiones = await getCollection('excursiones');
  return excursiones.map((excursion) => ({
    params: { slug: excursion.id.split('/')[1]?.replace('.md', '') || excursion.id.replace('.md', '') },
    props: { excursion },
  }));
}) satisfies GetStaticPaths;

interface Props {
  excursion: CollectionEntry<'excursiones'>;
}

const { excursion } = Astro.props;
const { Content } = await excursion.render();
---

<DefaultLayout 
  title={`${excursion.data.title} - Cuba Paradise`}
  description={excursion.data.descripcion}
>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <img src={excursion.data.img} alt={excursion.data.title} class="img-fluid rounded mb-4" />
        
        <h1 class="display-4 mb-3">{excursion.data.title}</h1>
        
        <div class="row mb-4">
          <div class="col-md-4">
            <h6 class="text-muted">Duración</h6>
            <p>{excursion.data.duracion}</p>
          </div>
          <div class="col-md-4">
            <h6 class="text-muted">Categoría</h6>
            <p class="text-capitalize">{excursion.data.categoria}</p>
          </div>
          {excursion.data.grupo && (
            <div class="col-md-4">
              <h6 class="text-muted">Grupo</h6>
              <p>{excursion.data.grupo}</p>
            </div>
          )}
          {excursion.data.destacado && (
            <div class="col-md-4">
              <h6 class="text-muted">Estado</h6>
              <p><span class="badge bg-warning text-dark"><span class="material-symbols-outlined me-1" style="font-size: 16px;">star</span>Destacado</span></p>
            </div>
          )}
        </div>
        
        <div class="content">
          <Content />
        </div>
        
        <div class="mt-5">
          <div class="alert alert-info">
            <h5><span class="material-symbols-outlined me-2">info</span>¿Interesado en esta excursión?</h5>
            <p class="mb-3">Contáctanos para más información y reservas.</p>
            <a href={getWhatsAppUrl('excursiones', excursion.data.title, excursion.data.whatsappMessage)} 
               class="btn btn-success" style="background:#7AB730;border:none;" target="_blank" rel="noopener noreferrer">
              <IconWhatsapp class="me-2" style="width: 20px; height: 20px; display: inline-block;" />Contactar ahora
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>