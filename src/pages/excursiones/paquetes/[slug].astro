---
import { getCollection } from "astro:content";
import DefaultLayout from "../../../layouts/DefaultLayout.astro";
import { getWhatsAppUrl } from "../../../utils/whatsapp.ts";

export async function getStaticPaths() {
  const paquetes = await getCollection("excursiones-paquetes");
  return paquetes.map((paquete) => ({
    params: { slug: paquete.slug },
    props: { paquete },
  }));
}

const { paquete } = Astro.props;
const { Content } = await paquete.render();
---

{
  paquete ? (
    <DefaultLayout 
      title={`${paquete.data?.title} - Cuba Paradise`}
      description={paquete.data?.descripcion}
    >
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <img
              src={paquete.data?.img}
              alt={paquete.data?.title}
              class="img-fluid rounded mb-4"
            />
            
            <h1 class="display-4 mb-3">{paquete.data?.title}</h1>
            
            <div class="row mb-4">
              <div class="col-md-4">
                <h6 class="text-muted">Duración</h6>
                <p>{paquete.data?.duracion}</p>
              </div>
              <div class="col-md-4">
                <h6 class="text-muted">Incluye</h6>
                <p>{paquete.data?.incluye}</p>
              </div>
              {paquete.data?.idiomas && (
                <div class="col-md-4">
                  <h6 class="text-muted">Idiomas</h6>
                  <p>{paquete.data.idiomas}</p>
                </div>
              )}
              {paquete.data?.destacado && (
                <div class="col-md-4">
                  <h6 class="text-muted">Estado</h6>
                  <p><span class="badge bg-warning text-dark"><span class="material-symbols-outlined me-1" style="font-size: 16px;">star</span>Destacado</span></p>
                </div>
              )}
            </div>
            
            <div class="content">
              <Content />
            </div>
            
            <div class="mt-5">
              <div class="alert alert-info">
                <h5><span class="material-symbols-outlined me-2">info</span>¿Interesado en este paquete?</h5>
                <p class="mb-3">Contáctanos para más información y reservas.</p>
                <a href={getWhatsAppUrl('paquetes-excursiones', paquete.data?.title, paquete.data?.whatsappMessage)} 
                   class="btn btn-success" style="background:#7AB730;border:none;" target="_blank" rel="noopener noreferrer">
                  <span class="material-symbols-outlined me-2">chat</span>Contactar ahora
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </DefaultLayout>
  ) : (
    <DefaultLayout title="Excursión no encontrada">
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-8 mx-auto text-center">
            <h1>Excursión no encontrada</h1>
            <p>No se encontró la excursión solicitada.</p>
            <a href="/excursiones" class="btn btn-primary">Volver a excursiones</a>
          </div>
        </div>
      </div>
    </DefaultLayout>
  )
}
