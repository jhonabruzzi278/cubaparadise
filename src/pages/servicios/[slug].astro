---
import type { GetStaticPaths } from "astro";
import { getCollection, type CollectionEntry } from 'astro:content';
import DefaultLayout from "../../layouts/DefaultLayout.astro";
import { getWhatsAppUrl } from "../../utils/whatsapp.ts";

export const getStaticPaths = (async () => {
  const servicios = await getCollection('servicios');
  return servicios.map((servicio) => ({
    params: { slug: servicio.id.replace('.md', '') },
    props: { servicio },
  }));
}) satisfies GetStaticPaths;

interface Props {
  servicio: CollectionEntry<'servicios'>;
}

const { servicio } = Astro.props;
const { Content } = await servicio.render();
---

<DefaultLayout 
  title={`${servicio.data.title} - Cuba Paradise`}
  description={servicio.data.descripcion}
>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        {servicio.data.img && (
          <img src={servicio.data.img} alt={servicio.data.title} class="img-fluid rounded mb-4" />
        )}
        
        <h1 class="display-4 mb-3">{servicio.data.title}</h1>
        
        <div class="row mb-4">
          {servicio.data.duracion && (
            <div class="col-md-3">
              <h6 class="text-muted">Duración</h6>
              <p>{servicio.data.duracion}</p>
            </div>
          )}
          {servicio.data.tipo && (
            <div class="col-md-3">
              <h6 class="text-muted">Tipo</h6>
              <p class="text-capitalize">{servicio.data.tipo}</p>
            </div>
          )}
          {servicio.data.destacado && (
            <div class="col-md-3">
              <h6 class="text-muted">Estado</h6>
              <p><span class="badge bg-warning text-dark"><span class="material-symbols-outlined me-1" style="font-size: 16px;">star</span>Destacado</span></p>
            </div>
          )}
        </div>
        
        <div class="content">
          <Content />
        </div>
        
        <div class="mt-5">
          <div class="alert alert-info">
            <h5><span class="material-symbols-outlined me-2">info</span>¿Interesado en este servicio?</h5>
            <p class="mb-3">Contáctanos para más información y reservas.</p>
            <a href={getWhatsAppUrl(servicio.data.tipo === 'renta-auto' ? 'renta-auto' : 
                                     servicio.data.tipo === 'clases-salsa' ? 'clases-salsa' : 
                                     servicio.data.tipo === 'masaje-terapeutico' ? 'masaje-terapeutico' : 
                                     'servicios', servicio.data.title, servicio.data.whatsappMessage)} 
               class="btn btn-success" style="background:#7AB730;border:none;" target="_blank" rel="noopener noreferrer">
              <span class="material-symbols-outlined me-2">chat</span>Contactar ahora
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>
