---
import DefaultLayout from "../../../layouts/DefaultLayout.astro";
import HeaderStart from "../../../components/HeaderStart.astro";
import CatalogoCard from "../../../components/CatalogoCard.astro";
import { getCollection } from "astro:content";

const toursPaquetes = await getCollection("tours-paquetes");

const page = "Paquetes Tours Cuba";
const image = "/img/varadero.jpg";
---

<DefaultLayout
  title="Paquetes Tours Cuba - La Habana, Cayos, Trinidad, Viñales"
  description="Paquetes tours completos en Cuba: Habana + Cayos, Trinidad + Cienfuegos, Viñales aventura. Combina cultura, historia y playas en experiencias únicas."
>
  <HeaderStart page={page} image={image} />
  <CatalogoCard titulo="Catálogo de Paquetes Tours" catalogo={toursPaquetes} />
</DefaultLayout>
