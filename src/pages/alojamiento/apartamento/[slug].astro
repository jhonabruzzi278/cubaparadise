---
import { getCollection } from "astro:content";
import DefaultLayout from "../../../layouts/DefaultLayout.astro";
import { getWhatsAppUrl } from "../../../utils/whatsapp.ts";

export async function getStaticPaths() {
  const alojamientos = await getCollection("alojamiento");
  const apartamentos = alojamientos.filter(
    (a) => a.data.tipo === "apartamento"
  );
  return apartamentos.map((alojamiento) => ({
    params: { slug: alojamiento.slug },
    props: { alojamiento },
  }));
}

const { alojamiento } = Astro.props;
const { Content } = await alojamiento.render();
---

<DefaultLayout 
  title={`${alojamiento.data?.title} - Cuba Paradise`}
  description={alojamiento.data?.descripcion}
>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <img
          src={alojamiento.data?.img}
          alt={alojamiento.data?.title}
          class="img-fluid rounded mb-4"
        />
        
        <h1 class="display-4 mb-3">{alojamiento.data?.title}</h1>
        
        <div class="row mb-4">
          <div class="col-md-4">
            <h6 class="text-muted">Ubicación</h6>
            <p>{alojamiento.data?.ubicacion}</p>
          </div>
          <div class="col-md-4">
            <h6 class="text-muted">Capacidad</h6>
            <p>{alojamiento.data?.capacidad} personas</p>
          </div>
          <div class="col-md-4">
            <h6 class="text-muted">Duración</h6>
            <p>{alojamiento.data?.duracion}</p>
          </div>
          {alojamiento.data?.destacado && (
            <div class="col-md-4">
              <h6 class="text-muted">Estado</h6>
              <p><span class="badge bg-warning text-dark"><span class="material-symbols-outlined me-1" style="font-size: 16px;">star</span>Destacado</span></p>
            </div>
          )}
        </div>
        
        <div class="content">
          <Content />
        </div>
        
        <div class="mt-5">
          <div class="alert alert-info">
            <h5><span class="material-symbols-outlined me-2">info</span>¿Interesado en este alojamiento?</h5>
            <p class="mb-3">Contáctanos para más información y reservas.</p>
            <a href={getWhatsAppUrl('alojamiento', alojamiento.data?.title, alojamiento.data?.whatsappMessage)} 
               class="btn btn-success" style="background:#7AB730;border:none;" target="_blank" rel="noopener noreferrer">
              <span class="material-symbols-outlined me-2">chat</span>Contactar ahora
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>
