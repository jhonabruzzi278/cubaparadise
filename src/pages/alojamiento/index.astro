---
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import HeaderStart from "../../components/HeaderStart.astro";
import AlojamientoCard from '../../components/AlojamientoCard.astro';
import FeatureStar from "../../components/FeatureStar.astro";
import CatalogoCard from '../../components/CatalogoCard.astro';
import { getCollection } from 'astro:content';

const page = "Alojamiento en Cuba";
const image = "/img/cubacalle2.jpg ";
const alojamientos = await getCollection('alojamiento');
const apartamento = alojamientos.find(a => a.data.tipo === 'apartamento');
const campo = alojamientos.find(a => a.data.tipo === 'casa-en-el-campo');
const playa = alojamientos.find(a => a.data.tipo === 'casa-en-la-playa');
const catalogo = [apartamento, campo, playa].filter(Boolean);
---

<DefaultLayout 
  title="Alojamiento Cuba - Casas Particulares La Habana, Trinidad, Viñales"
  description="Alojamiento auténtico en Cuba. Casas particulares en La Habana, Trinidad, Viñales. Apartamentos urbanos, casas rurales y frente al mar con familias cubanas."
>
  <HeaderStart page={page} image={image} />
  <AlojamientoCard />
  <CatalogoCard titulo="Alojamiento Destacados" catalogo={catalogo} />
  <FeatureStar />
  
</DefaultLayout>
