---
import DefaultLayout from '../../../layouts/DefaultLayout.astro';
import { getCollection } from 'astro:content';
import CatalogoCard from '../../../components/CatalogoCard.astro';
import HeaderStart from '../../../components/HeaderStart.astro';

const alojamientos = await getCollection('alojamiento');
const catalogo = alojamientos.filter(a => a.data.tipo === 'casa-en-la-playa');

const page = "Casas en la Playa";
const image = "/img/malecon.jpg";
---

<DefaultLayout title="Casas en la playa en Cuba">
  <HeaderStart page={page} image={image} />
  <CatalogoCard titulo="Casas en la playa disponibles" catalogo={catalogo} />
</DefaultLayout>
