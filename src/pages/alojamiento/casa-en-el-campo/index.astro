---
import DefaultLayout from "../../../layouts/DefaultLayout.astro";
import { getCollection } from "astro:content";
import CatalogoCard from "../../../components/CatalogoCard.astro";
import HeaderStart from "../../../components/HeaderStart.astro";

const alojamientos = await getCollection("alojamiento");
const catalogo = alojamientos.filter((a) => a.data.tipo === "casa-en-el-campo");

const page = "Casas en el Campo";
const image = "/img/naturaleza1.jpg";
---

<DefaultLayout title="Casas en el campo en Cuba">
  <HeaderStart page={page} image={image} />
  <CatalogoCard titulo="Casas en el campo disponibles" catalogo={catalogo} />
</DefaultLayout>
