---
import BaseCard from './BaseCard.astro';

export interface Props {
  titulo: string;
  subtitulo: string;
  ruta: string;
  icono: string;
  descripcion: string;
}

const { titulo, subtitulo, ruta, icono, descripcion } = Astro.props;

// Configurar datos para BaseCard
const cardItems = [
  {
    title: "Paquetes",
    description: descripcion,
    icon: icono,
    link: ruta
  }
];
---

<BaseCard 
  sectionTitle={titulo}
  sectionSubtitle={subtitulo}
  cardType="service"
  items={cardItems}
  columnsLg={3}
  columnsMd={2}
  columnsSm={1}
/>
