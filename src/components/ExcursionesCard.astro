---
import BaseCard from './BaseCard.astro';

// Configurar datos para ExcursionesCard usando BaseCard
const excursionesItems = [
  {
    title: "Paquetes",
    description: "Descubre nuestros paquetes de excursiones cuidadosamente diseñados para que vivas lo mejor de Cuba: naturaleza, cultura, aventura y relax, todo en una sola experiencia. ¡Elige tu paquete y déjate sorprender!",
    icon: "fa fa-2x fa-suitcase-rolling",
    link: "/excursiones/paquetes"
  }
];
---

<BaseCard 
  sectionTitle="Excursiones"
  sectionSubtitle="Vive aventuras inolvidables en Cuba"
  cardType="service"
  items={excursionesItems}
  columnsLg={3}
  columnsMd={2}
  columnsSm={1}
/>
    