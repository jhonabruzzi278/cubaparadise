---
export interface Props {
    page: string;
    image?: string;
}
const { page, image = '/img/Cuba.webp' } = Astro.props;
---
<div class="container-fluid page-header position-relative" style={`background: url('${image}') center center/cover no-repeat; min-height: 60vh;`}>
    <div class="position-absolute w-100 h-100" style="background: linear-gradient(135deg, rgba(0,0,0,0.6), rgba(0,123,255,0.3)); left: 0; top: 0;"></div>
    <div class="container position-relative" style="z-index: 2;">
        <div class="d-flex flex-column align-items-center justify-content-center text-center px-3" style="min-height: 60vh;">
            <h1 class="display-4 display-md-3 text-white fw-bold mb-4 animate-fade-in">{page}</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent justify-content-center mb-0">
                    <li class="breadcrumb-item">
                        <a class="text-white-50 text-decoration-none fw-semibold" href="/">
                            <i class="fa fa-home me-2"></i>Inicio
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-white fw-bold" aria-current="page">
                        {page}
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<style>
    .page-header {
        background-attachment: fixed;
        backdrop-filter: blur(2px);
        position: relative;
        overflow: hidden;
    }
    
    .page-header .position-absolute {
        z-index: 1;
    }
    
    .animate-fade-in {
        animation: fadeInUp 1s ease-out;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .breadcrumb-item + .breadcrumb-item::before {
        content: "â€º";
        color: rgba(255, 255, 255, 0.6);
        font-weight: bold;
        font-size: 1.2em;
    }
    
    @media (max-width: 768px) {
        .page-header {
            min-height: 50vh !important;
            background-attachment: scroll;
        }
        
        .d-flex.flex-column {
            min-height: 50vh !important;
            padding: 2rem 1rem;
        }
        
        .display-4 {
            font-size: 2.5rem !important;
            line-height: 1.2;
        }
        
        .breadcrumb {
            font-size: 0.9rem;
        }
    }
    
    @media (max-width: 576px) {
        .display-4 {
            font-size: 2rem !important;
        }
        
        .breadcrumb {
            font-size: 0.8rem;
            flex-wrap: wrap;
        }
    }
</style>