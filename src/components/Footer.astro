<style>
    .footer {
        background-color: #2c3e50;
        color: white;
        padding: 2rem 0 1rem;
        margin-top: auto;
    }
    
    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
    }
    
    .footer-section h3 {
        color: #e74c3c;
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }
    
    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .footer-section li {
        margin-bottom: 0.5rem;
    }
    
    .footer-section a {
        color: #bdc3c7;
        text-decoration: none;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .footer-section a:hover {
        color: #e74c3c;
    }
    
    .icon {
        font-size: 1rem;
    }
    
    .social-links {
        display: flex;
        gap: 1rem;
    }
    
    .social-links a {
        font-size: 1.5rem;
        transition: transform 0.3s ease;
        justify-content: center;
    }
    
    .social-links a:hover {
        transform: scale(1.2);
    }
    
    .footer-bottom {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid #34495e;
        color: #95a5a6;
    }
    
    @media (max-width: 768px) {
        .footer-container {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }
    }
    
    @media (max-width: 480px) {
        .footer-container {
            grid-template-columns: 1fr;
        }
    }
</style>