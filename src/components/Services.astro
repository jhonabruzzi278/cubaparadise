---
// Definición de servicios de forma dinámica
const services = [
    {
        icon: "hiking",
        title: "Guías Turísticos",
        description: "Explora Cuba con guías locales expertos en historia y cultura.",
        link: "/excursiones"
    },
    {
        icon: "support_agent",
        title: "Reservas de Tours",
        description: "Reserva tours personalizados a los mejores destinos de Cuba.",
        link: "/tours"
    },
    {
        icon: "house",
        title: "Alojamiento",
        description: "Encuentra casas particulares y hospedajes únicos en Cuba.",
        link: "/alojamiento"
    }
];
---

<div class="container py-5">
    <div class="text-center mb-4">
        <h6 class="text-primary text-uppercase" style="letter-spacing: 2px;">Nuestros Servicios</h6>
        <h2 class="fw-bold">Descubre lo que ofrecemos</h2>
    </div>
    <div class="row justify-content-center g-4">
        {services.map((service) => (
            <div class="col-md-6 col-lg-4">
                <a href={service.link} class="service-item d-flex flex-column align-items-center text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <span class="material-symbols-outlined">
                            {service.icon}
                        </span>
                    </div>
                    <h5 class="fw-bold mb-2">{service.title}</h5>
                    <p class="text-muted small">{service.description}</p>
                </a>
            </div>
        ))}
    </div>
</div>

<style>
/* Contenedor principal */
.container {
    max-width: 960px;
    margin: 0 auto;
}

/* Estilo de los servicios */
.service-item {
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 10px;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    max-width: 300px;
}

.service-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

/* Icono */
.icon-wrapper {
    width: 60px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #7AB730;
    transition: color 0.3s ease;
}

.icon-wrapper .material-symbols-outlined {
    font-size: 3rem;
    color: inherit;
}

.service-item:hover .icon-wrapper {
    color: #527a20;
}

/* Títulos y descripciones */
h5 {
    font-size: 1.25rem;
    color: #333;
}

p {
    font-size: 0.9rem;
    line-height: 1.5;
}

/* Responsividad */
@media (max-width: 768px) {
    .service-item {
        padding: 1.5rem;
        max-width: 100%;
    }

    h5 {
        font-size: 1.1rem;
    }

    p {
        font-size: 0.85rem;
    }
}

@media (max-width: 576px) {
    .icon-wrapper {
        width: 60px;
        height: 60px;
    }

    h5 {
        font-size: 1rem;
    }

    p {
        font-size: 0.8rem;
    }
}
</style>