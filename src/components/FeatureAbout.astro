---
// Definición de características de forma dinámica (como en Services)
const features = [
    {
        icon: "payments",
        title: "Precios Transparentes",
        description: "Ofrecemos experiencias auténticas y servicios de calidad al mejor precio, sin sorpresas ni comisiones ocultas."
    },
    {
        icon: "star",
        title: "Atención Personalizada",
        description: "Nuestro equipo local te acompaña antes, durante y después de tu viaje, adaptando cada detalle a tus intereses."
    },
    {
        icon: "explore",
        title: "Experiencia Local",
        description: "Conocemos Cuba como nadie: accede a lugares, actividades y guías que solo los locales pueden ofrecerte."
    }
];
---

<div class="container py-5">
    <div class="text-center mb-4">
        <h6 class="text-success text-uppercase" style="letter-spacing: 2px;">¿Por qué elegirnos?</h6>
        <h2 class="fw-bold">Nuestras ventajas</h2>
    </div>
    <div class="row justify-content-center g-4">
        {features.map((feature) => (
            <div class="col-md-6 col-lg-4">
                <div class="feature-item d-flex flex-column align-items-center text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <span class="material-symbols-outlined">
                            {feature.icon}
                        </span>
                    </div>
                    <h5 class="fw-bold mb-2">{feature.title}</h5>
                    <p class="text-muted small">{feature.description}</p>
                </div>
            </div>
        ))}
    </div>
</div>

<style>
/* Contenedor principal */
.container {
    max-width: 960px;
    margin: 0 auto;
}

/* Estilo de las características (replicando Services) */
.feature-item {
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 10px;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    max-width: 300px;
    height: 100%;
}

.feature-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

/* Icono */
.icon-wrapper {
    width: 60px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #7AB730;
    transition: color 0.3s ease;
}

.icon-wrapper .material-symbols-outlined {
    font-size: 3rem;
    color: inherit;
}

.feature-item:hover .icon-wrapper {
    color: #527a20;
}

/* Títulos y descripciones */
h5 {
    font-size: 1.25rem;
    color: #333;
}

p {
    font-size: 0.9rem;
    line-height: 1.5;
}

/* Responsividad */
@media (max-width: 768px) {
    .feature-item {
        padding: 1.5rem;
        max-width: 100%;
    }

    h5 {
        font-size: 1.1rem;
    }

    p {
        font-size: 0.85rem;
    }
}

@media (max-width: 576px) {
    .icon-wrapper {
        width: 60px;
        height: 60px;
    }

    h5 {
        font-size: 1rem;
    }

    p {
        font-size: 0.8rem;
    }
}
</style>