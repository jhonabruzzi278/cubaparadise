---
import BaseCard from './BaseCard.astro';

// Configurar datos para AlojamientoCard usando BaseCard
const alojamientos = [
    {
        title: "Casa en la playa",
        description: "Despierta con el sonido del mar y disfruta de la brisa caribeña en casas frente a las mejores playas de Cuba.",
        icon: "fa-umbrella-beach",
        link: "/alojamiento/casa-en-la-playa"
    },
    {
        title: "Casa en el campo", 
        description: "Vive la tranquilidad rural, rodeado de naturaleza, tradiciones y hospitalidad cubana auténtica.",
        icon: "fa-tree",
        link: "/alojamiento/casa-en-el-campo"
    },
    {
        title: "Apartamento",
        description: "Disfruta de la comodidad y privacidad de un apartamento moderno en el corazón de la ciudad.",
        icon: "fa-building",
        link: "/alojamiento/apartamento"
    }
];
---

<BaseCard 
  sectionTitle="Alojamientos"
  sectionSubtitle="Elige tu tipo de estancia ideal en Cuba"
  cardType="accommodation"
  items={alojamientos}
  columnsLg={3}
  columnsMd={2}
  columnsSm={1}
/>
    